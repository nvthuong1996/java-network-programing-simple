<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <TextView
        android:id="@id/tenNguoiChoi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="5.0dip"
        android:text="Nguyễn Văn Thường"
        android:textColor="@android:color/holo_orange_dark"
        android:textSize="18sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@id/txtTrangThai"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="5.0dip"
        android:text="online"
        android:textColor="@android:color/holo_green_dark"
        android:textSize="16.0sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tenNguoiChoi" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="0.0dip"
        android:layout_height="2.0dip"
        android:layout_marginTop="5.0dip"
        android:background="@android:color/holo_blue_dark"
        android:orientation="horizontal"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txtTrangThai" />

    <TextView
        android:id="@+id/textDiemSo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:text="100 điểm"
        android:textSize="10sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/tenNguoiChoi"
        app:layout_constraintStart_toEndOf="@+id/tenNguoiChoi" />

    <Button
        android:id="@+id/button"
        android:layout_width="105dp"
        android:layout_height="37dp"
        android:layout_marginEnd="20dp"
        android:background="@color/colorAccent"
        android:text="Thách đấu"
        android:textColor="#fff"
        app:layout_constraintBottom_toBottomOf="@+id/linearLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>